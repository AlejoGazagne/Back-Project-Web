generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  savedProperties    Favorites[]
}

model Seller {
  id       String   @id @default(cuid())
  name    String
  email    String  @unique
  phoneNumber String
  password String
  properties Properties[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  published Boolean
  price     Float
  onSale    Boolean
  property Properties @relation(fields: [propertyId], references: [id])
  propertyId String
  saved Favorites[]
  valorations Valorations[]
}

model Favorites {
  id        String   @id @default(cuid())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Properties {
  id          String   @id @default(cuid())
  ubication   String
  image      String
  type        String
  rooms Int
  bathrooms       Int
  garage Int
  area        Float
  post        Post[]
  seller    Seller    @relation(fields: [sellerId], references: [id])
  sellerId  String
}

model Valorations {
  id        String   @id @default(cuid())
  comment String
  quailification Int
  postRelated Post  @relation(fields: [postId], references: [id])
  postId String 
}